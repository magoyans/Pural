<link rel='stylesheet' href='/public/stylesheets/pural-style.css'/>


<!-- Category showcase -->
    <section class="category-showcase">
        <div class="content">
            <h2>{{categoria}}</h2>
        </div>
    </section>

<!-- Products Cards -->
    
    {{!-- Como hacer que dinamicamente esto muestre el type antes de los 4 productos? --}}



    
    <section class="product-cards">
        {{#each products_category}}
            <div>
                <img src="/images/{{img}}" alt="">
                <p class="product-category">{{name_cat}}</p>
                <h3>{{name}}</h3>
                <p>{{description}}</p>
                <p class="pricing"><strong>${{price}}</strong>/{{weight}}</p>
                <a href="/product/{{id_prod}}" class="btn block">Show more<i class="fas fa-chevron-right"></i></a>
            </div>
        {{/each}}


    </section>   