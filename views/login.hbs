<link rel='stylesheet' href='/stylesheets/pural-style.css'/>

<div class="container">
	<nav class="main-nav">
		<a href="/"><img src="/images/logo.small.PNG" alt="Logo" class="logo"></a>
		<ul class="main-menu">
			<li><a href="/product/all" target="_blank">All Products</a></li>
			<li><a href="/category/1" target="_blank">Bath & Shower</a></li>
			<li><a href="/category/2" target="_blank">Hair</a></li>
			<li><a href="/category/3" target="_blank">Face</a></li>
			<li><a href="/category/4" target="_blank">Body</a></li>
		</ul>

		<ul class="right-menu">
			<li>
			{{#if session}}
			<a href="/logout" target="_blank">Logout</a>
			{{else}}
			<a href="/login" target="_blank">Login</a>
			{{/if}}
			</li>
			<span>|</span>
			<li><a href="/register" target="_blank">Join</a></li>
			<span>|</span>
			<li><a href="/contact" target="_blank">Contact Us</a></li>
			<li><a href="#"><i class="fas fa-search"></i></a></li>
			<li><a href="#"><i class="fas fa-shopping-cart"></i></a></li>
		</ul>
	</nav>

	<div class="container-fluid form-style">
		<div class="row" style="height:100vh;">
			<div class="col-12 d-flex justify-content-center align-items-center">
				<form method="POST" action="/login" style="width:40%;">
					<div class="form-group">

					<div class="container text-center mb-4">
						<h1>Welcome back!</h1>
					</div>
					<div class="form-group">
						<input type="email" class="form-control" id="email" autofocus placeholder="Email*" name="email">
					</div>

					<div class="form-group">
						<input type="password" class="form-control" placeholder="Password*" name="password">
						<a href="#" class="form-text text-dark">I forgot my password</a>
					</div>

					<div class="form-check text-dark mb-4">
						<input class="form-check-input" type="checkbox" id="autoSizingCheck2">
						<label class="form-check-label" for="autoSizingCheck2">Remember me</label>
					</div>

					<div class="form-group">
						<button type="submit" class="btn btn-success btn-block">SIGN IN</button>
					</div>
					
					<p class="text-center text-danger">{{message}}</p>
				</form>
			</div>
		</div>
	</div>
</div>